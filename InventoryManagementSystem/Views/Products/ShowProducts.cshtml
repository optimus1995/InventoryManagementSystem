@using ApplicationCore.DapperEntity
@model List<Products>
@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<h1>
    Inventory Rocord System
</h1>

@* <button class="btn btn-primary"> <a asp-action="SaveProduct" asp-controller="Products" style="color:white">Add New</a>     </button> *@
<table class="table">
    <thead>
        <tr>
            <th hidden>ID</th>

            <th>Name</th>
            <th>Description</th>
            <th>SKU</th>
            <th>Price</th>
            <th>Total Quantity Available</th>
            <th>Created date</th>
            <td hidden> CategoryId </td>
            <td> Category  </td>
            <td> User</td>
            <th>Edit</th>
        </tr>

    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr class="col-md-10"><td>No Record Exist</td></tr>
        }
        else {
        @foreach (var records in Model)
        {
            <tr>
                <td hidden> @records.Id</td>
                <td> @records.Name </td>
                <td> @records.Description </td>
                <td> @records.SKU </td>
                <td> @records.Price </td>
                <td> @records.quantity </td>
                <td> @records.CreatedAt </td>
                <td hidden> @records.CategoryID </td>
                <td> @records.Category.Name  </td>
                <td> @records.AspNetUsers.UserName</td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Products" asp-route-id="@records.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Products" asp-route-id="@records.Id">delete</a>
                </td>
            </tr>
        } 
        }
    </tbody>


</table>