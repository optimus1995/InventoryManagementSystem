}

@model ApplicationCore.UseCases.Customers.Update.FetchCustomersResponse
<div class="card mt-4 ">
    <div class="card-header">
        <h5 class=" font-weight-bold text-primary">Customer Data</h5>
    </div>
    <div class="card-body">

<form class="form mt-3" id="Updateform" method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
        <label for="Id" class="form-label">Id</label>
        <input type="text" asp-for="Id" class="form-control" disabled />
    </div>

        <div class="col-md-6 mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Update Customer name"  />
    </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="Shipping Address" class="form-label">Shipping Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Update Your Email"  />
    </div>

        <div class="col-md-6 mb-3">
        <label for="Billing Address" class="form-label">Billing Address</label>
        <input type="text" asp-for="BillingAddress" class="form-control" placeholder="Update Billing Address"  />
    </div>
    </div>
        <div class="row">
            <div class="col-md-6 mb-3">
            
                <label for="Shipping Address" class="form-label">Shipping Address</label>
        <input type="text" asp-for="ShippingAddress" class="form-control" placeholder="Update Shipping Address"  />
    </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>
</div>