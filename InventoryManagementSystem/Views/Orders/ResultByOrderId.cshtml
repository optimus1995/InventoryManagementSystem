 @using ApplicationCore.DapperEntity
@model List<OrderItems>
@await Component.InvokeAsync("Inventory")
<link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">
<link href="/css/sb-admin-2.min.css" rel="stylesheet">
<link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<a class="btn btn-primary" asp-action="SaveOrder" asp-controller="Orders">
    Add New
    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
</a>
@* <a class="btn btn-primary col-mb-2 float-right" asp-action="ExportRecord" asp-controller="Customers">
    Export
      <i class="fa-solid fa-file-export"></i>

</a> *@
<div id="wrapper">
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">
            <div class="container-fluid">

                <h1 class="h3 mb-2 text-gray-800">Orders</h1>
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Orders Details</h6>

                    </div>
                    <div class="card mb-2 float-right">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%">
                                <thead>
                                    <tr>
                                        <th>Detailed Record</th>
                                        <td> Order Status</td>

                                    </tr>

                                </thead>
                                <tbody>

                                    @foreach (var records in Model)
                                    {
                                        <tr>
                                            <td> @records.OrderId</td>
                                            <td>@records.Customers.Name</td>
                                            <td>@records.Orders.TotalPrice </td>
                                            <td>@records.Orders.Discount  % </td>
                                            <td>@records.Orders.TotalAmount </td>
                                            @*    <td><a class='btn btn-danger' onclick='ShowOrderDetails(@records.OrderId)'><i class="fas fa-receipt fa-solid"></i></a></td> *@
                                            <a class="btn btn-primary" asp-action="ResultbyOrderId" asp-controller="Orders" asp-route-id="@records.OrderId">
                                                <i class="fas fa-receipt fa-solid" aria-hidden="true"></i>
                                            </a>
                                            <td>@records.Orders.OrderStatus</td>



                                        </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>