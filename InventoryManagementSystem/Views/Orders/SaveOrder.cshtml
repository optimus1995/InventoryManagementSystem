            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
            </div>
            <div class="row">
                <div class="col-md-6">
        <label for="Products" class="form-label">Products</label>
        <select name="ProductId" id="productDropdown" class="form-control" onchange="updatePrice()">
