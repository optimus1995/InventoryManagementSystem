@using ApplicationCore.UseCases.Category.CreateCategory
@{
}
@model CreateCategoryRequest
<div class="card mt-4">
    <div class="card-header">
        <h5 class=" font-weight-bold text-primary">Add Category</h5>
    </div>
    <div class="card-body">
        <form class="form" id="saveform" method="post">
            <div class="mb-3 col-md-6">
                <label for="Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter Category name" required />
                <span asp-validation-for="Name" > </span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
