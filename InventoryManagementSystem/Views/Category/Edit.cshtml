@using ApplicationCore.DapperEntity
@{
}
@model Category
<h1>Update Record</h1>
<form class="form mt-3" id="Updateform" method="post">

    <div class="mb-3">
        <label for="CategoryId" class="form-label">Id</label>
        <input type="text" asp-for="Id" class="form-control" disabled />
    </div>

    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Category name" required />
    </div>

  
    <button type="submit" class="btn btn-primary">Save</button>
</form>
